				<nick>Ysop</nick>
			</author>
			<author n="2">
				<description>Engine advice</description>
				<nick>S&amp;J</nick>
			</author>
		</authors>
		<aircraft-version>1.0.0</aircraft-version>
		<status>beta</status>
		<minimum-fg-version>2017.2.0</minimum-fg-version>

		<flight-model>jsb</flight-model>
