<?xml version="1.0"?>
<PropertyList>
	<filter>
		<name>render-rain</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/sim/model/effects/enable-glass-rain</property>
			</condition>
			<property>/environment/rain-norm</property>
		</input>
		<input>
			<condition>
				<not>
					<property>/sim/model/effects/enable-glass-rain</property>
				</not>
			</condition>
			<value>0</value>
		</input>
		<output>
			<property>/sim/model/effects/rain-norm</property>
		</output>
	</filter>
	<filter>
		<name>render-groundsplash</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/sim/model/effects/enable-glass-rain</property>
			</condition>
			<property>/environment/aircraft-effects/ground-splash-norm</property>
		</input>
		<input>
			<condition>
				<not>
					<property>/sim/model/effects/enable-glass-rain</property>
				</not>
			</condition>
			<value>0</value>
		</input>
		<output>
			<property>/sim/model/effects/ground-splash-norm</property>
		</output>
	</filter>
	<filter>
		<name>render-fog</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/sim/model/effects/enable-fog-frost</property>
			</condition>
			<property>/environment/aircraft-effects/fog-level</property>
		</input>
		<input>
			<condition>
				<not>
					<property>/sim/model/effects/enable-fog-frost</property>
				</not>
			</condition>
			<value>0</value>
		</input>
		<output>
			<property>/sim/model/effects/fog-level</property>
		</output>
	</filter>
	<filter>
		<name>render-frost</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/sim/model/effects/enable-fog-frost</property>
			</condition>
			<property>/environment/aircraft-effects/frost-level</property>
		</input>
		<input>
			<condition>
				<not>
					<property>/sim/model/effects/enable-fog-frost</property>
				</not>
			</condition>
			<value>0</value>
		</input>
		<output>
			<property>/sim/model/effects/frost-level</property>
		</output>
	</filter>
</PropertyList>
