<?xml version="1.0"?>
<PropertyList>
	<path>Models/Effects/procedural-light.ac</path>

	<effect>
		<inherits-from>Models/Effects/landing-light-right</inherits-from>
		<object-name>Light</object-name>
	</effect>
	
	<animation>
		<type>scale</type>
		<object-name>Light</object-name>
		<x-offset>0.2</x-offset>
		<y-offset>0.2</y-offset>
		<z-offset>0.2</z-offset>
	</animation>
	
	<!-- Compositor light - we're not going to support any Rembrandt nonsense -->
	<light>
		<name>LandingLightLeft</name>
		<type>spot</type>
		<position>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>-1.0</x>
			<y>0.1</y>
			<z></z>
		</direction>
		<ambient>
			<r>0.03</r>
			<g>0.03</g>
			<b>0.03</b>
			<a>1</a>
		</ambient>
		<diffuse>
			<r>0.75</r>
			<g>0.75</g>
			<b>0.8</b>
			<a>1</a>
		</diffuse>
		<specular>
			<r>0.75</r>
			<g>0.75</g>
			<b>0.8</b>
			<a>1</a>
		</specular>
		<attenuation>
			<c>0.0</c>
			<l>0.005</l>
			<q>0</q>
		</attenuation>
		<spot-exponent>2</spot-exponent>
		<spot-cutoff>30</spot-cutoff>
		<range-m>100</range-m>
		<dim-factor>
			<property>controls/lighting/landing-lights</property>
		</dim-factor>
	</light>
</PropertyList>
