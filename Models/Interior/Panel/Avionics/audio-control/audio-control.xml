<?xml version="1.0"?>
<PropertyList>
	<path>audio-control.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>MarkerBeaconOuterLamp</object-name>
		<emission>
			<red>0</red>
			<green>0</green>
			<blue>1</blue>
			<factor-prop>instrumentation/marker-beacon/lamp-brightness</factor-prop>
		</emission>
		<condition>
			<or>
				<property>instrumentation/marker-beacon/outer</property>
				<property>instrumentation/marker-beacon/test</property>
			</or>
		</condition>
	</animation>
	<animation>
		<type>material</type>
		<object-name>MarkerBeaconMiddleLamp</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop>instrumentation/marker-beacon/lamp-brightness</factor-prop>
		</emission>
		<condition>
			<or>
				<property>instrumentation/marker-beacon/middle</property>
				<property>instrumentation/marker-beacon/test</property>
			</or>
		</condition>
	</animation>
	<animation>
		<type>material</type>
		<object-name>MarkerBeaconInnerLamp</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>instrumentation/marker-beacon/lamp-brightness</factor-prop>
		</emission>
		<condition>
			<or>
				<property>instrumentation/marker-beacon/inner</property>
				<property>instrumentation/marker-beacon/test</property>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>MarkerBeaconSensitivitySwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/marker-beacon/sensitivity</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/marker-beacon/sensitivity</property>
				<factor>1</factor>
				<min>0</min>
				<max>2</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>MarkerBeaconOutputSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/marker-beacon/output</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/marker-beacon/output</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
		<animation>
		<type>knob</type>
		<object-name>TransmitterSwitch</object-name>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/transmitter</property>
		<factor>40</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/transmitter</property>
				<factor>1</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>COMAutoSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/com-auto</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/com-auto</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>COMBothSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/com-both</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/com-both</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>NAV1Switch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/nav-1</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/nav-1</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>NAV2Switch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/nav-2</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/nav-2</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>ADFSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/adf</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/adf</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>DMESwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/dme</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/dme</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>MarkerBeaconLampsBrightnessSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>instrumentation/audio-control/marker-beacon-lamp-brightness</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/marker-beacon-lamp-brightness</property>
				<factor>1</factor>
				<min>-1</min>
				<max>1</max>
			</binding>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
					# TODO: move this into its own module so we can initialize props.Node's once and then just setValue
					pos = getprop("instrumentation/audio-control/marker-beacon-lamp-brightness");
					print(pos);
					if (pos == 0) { # pos ==  DAY
						setprop("instrumentation/marker-beacon/lamp-brightness", 1);
						setprop("instrumentation/marker-beacon/test", 0);
					} elsif (pos == 1) { # pos == NITE
						setprop("instrumentation/marker-beacon/lamp-brightness", 0.5);
						setprop("instrumentation/marker-beacon/test", 0);
					} else {
						setprop("instrumentation/marker-beacon/test", 1);
					}
				]]></script>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/audio-control/marker-beacon-lamp-brightness</property>
				<step>0</step>
				<min>0</min>
				<max>1</max>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/marker-beacon/test</property>
				<value>0</value>
			</binding>
		</release>
	</animation>
	
	<text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Audio control panel</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.04</max-height>
		<max-width>0.16</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0 </y-m>
			<z-m>0.01</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
</PropertyList>
