<?xml version="1.0"?>
<PropertyList>
	<model>
		<path>throttle.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>-0.06</y-m>
			<z-m>0</z-m>
		</offsets>
	</model>
	<model>
		<path>prop-pitch.xml</path>
	</model>
	<model>
		<path>mixture.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0.06</y-m>
			<z-m>0</z-m>
		</offsets>
	</model>
	 <text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Engine controls</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.3</max-height>
		<max-width>0.12</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0 </y-m>
			<z-m>0.02</z-m>
			<pitch-deg>-50</pitch-deg>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
</PropertyList>
