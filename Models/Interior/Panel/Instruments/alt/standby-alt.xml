<?xml version="1.0"?>
<PropertyList>
	<path>standby-alt.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle100</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.36</factor>	
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle1000</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.036</factor>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle10000</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.0036</factor>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>InHgScale</object-name>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter/setting-inhg</property>
		<interpolation>
			<entry>
				<ind>27.5</ind>
				<dep>10</dep>
			</entry>
			<entry>
				<ind>31.0</ind>
				<dep>360</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Flag</object-name>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<interpolation>
			<entry>
				<ind>10000</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>15000</ind>
				<dep>40</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>InHgKnob</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>800</factor>
		<axis>
			<object-name>InHgKnobAxis</object-name>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<factor>0.01</factor>
				<min>26.0</min>
				<max>33.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<effect>
		<inherits-from>Effects/glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
