<?xml version="1.0"?>
<PropertyList>
	<path>chrono.ac</path>
	
	<animation>
		<type>slider</type>
		<object-name>ModeButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/chronometer/mode-button-pressed</property>
		<factor>0.002</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/mode-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/mode-button-pressed</property>
				<value>0</value>
			</binding>
		</release>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>SetResetButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/chronometer/set-button-pressed</property>
		<factor>0.002</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/set-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/set-button-pressed</property>
				<value>0</value>
			</binding>
		</release>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>ModeButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/chronometer/start-stop-button-pressed</property>
		<factor>0.002</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/start-stop-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/chronometer/start-stop-button-pressed</property>
				<value>0</value>
			</binding>
		</release>
	</animation>
	
	<effect>
		<inherits-from>Effects/glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>	
</PropertyList>
